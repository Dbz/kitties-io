<div class='margins'>
	<table>
		<tr>
			<th>Product</th>
			<th>Amount</th>
			<th>Total</th>
		</tr>
		<% orders.each(function(order) { %>
			<tr>
				<th><%= order.listing().escape('name') %></th>
				<th><%= order.escape('amount') %></th>
				<th><%= order.listing().escape('price') * order.escape('amount') %></th>
			</tr>
		<% }) %>
	</table>
</div>